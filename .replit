modules = ["web", "nodejs-20", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["boost", "cmake", "freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "tcl", "tk", "zlib"]

[agent]
expertMode = true
integrations = ["replitmail:1.0.0"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41445
externalPort = 3001

[[ports]]
localPort = 42393
externalPort = 3003

[[ports]]
localPort = 43485
externalPort = 3000

[[ports]]
localPort = 43781
externalPort = 3002

[[ports]]
localPort = 44337
externalPort = 5173

[[ports]]
localPort = 44859
externalPort = 5000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PhotoVault Server"

[[workflows.workflow]]
name = "PhotoVault Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_ENV=development SECRET_KEY=dev-secret-key python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "wsgi:app"]
